<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.hbm2ddl.auto">create</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hibernatelearningdb?serverTimezone=EST</property>
        <property name="connection.username">hibernate_learning</property>
        <property name="connection.password">hibernate_learning</property>
        <property name="show_sql">true</property>
        <property name="hibernate.generate_statistics">true</property>
        <mapping package="com.arasakumar.lakshmanan.model.identity"/>
        <mapping class="com.arasakumar.lakshmanan.model.identity.HiloIdEntity"/>
        <mapping class="com.arasakumar.lakshmanan.model.identity.AutoIdEntity"/>
        <mapping class="com.arasakumar.lakshmanan.model.identity.IdentityIdEntity"/>
        <mapping class="com.arasakumar.lakshmanan.model.identity.IncrementIdEntity"/>
        <mapping class="com.arasakumar.lakshmanan.model.identity.SequenceIdEntity"/>
        <mapping class="com.arasakumar.lakshmanan.model.identity.TableIdEntity"/>
        <mapping class="com.arasakumar.lakshmanan.model.identity.UUIDIdEntity"/>
        <mapping class="com.arasakumar.lakshmanan.model.identity.SequenceStyleIdEntity"/>
        <mapping class="com.arasakumar.lakshmanan.model.identity.EnhancedTableIdEntity"/>
    </session-factory>
</hibernate-configuration>